<Window x:Class="LatiteInjector.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LatiteInjector"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Latite Client Changelog" Width="390" Height="350" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize" WindowStyle="None">
  <Border Padding="2" BorderBrush="Transparent" BorderThickness="2" CornerRadius="25">
    <Border.Background>
      <ImageBrush ImageSource="/Assets/Background.png" Opacity="0.9" Stretch="UniformToFill"/>
    </Border.Background>
    <Grid>
      <Image MouseLeftButtonDown="CloseButton_Click" Width="20" Height="20" Margin="349,10,0,0"
             HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="Hand" Source="/Assets/X.png"
             Style="{StaticResource HoverEffect}"/>
      <Rectangle Width="356" Height="1" Margin="0,165,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                 Stroke="AliceBlue"/>
      <Label Margin="0,35,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Client"
             FontFamily="Inter" FontSize="20px" FontWeight="Regular" Foreground="White"/>
      <Label Margin="0,166,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Injector"
             FontFamily="Inter" FontSize="20px" FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="ClientChangelogLine1" x:FieldModifier="public" Margin="0,74,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="ClientChangelogLine2" x:FieldModifier="public" Margin="0,97,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="ClientChangelogLine3" x:FieldModifier="public" Margin="0,120,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="ClientChangelogLine4" x:FieldModifier="public" Margin="0,143,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="InjectorChangelogLine1" x:FieldModifier="public" Margin="0,205,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="InjectorChangelogLine2" x:FieldModifier="public" Margin="0,227,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="InjectorChangelogLine3" x:FieldModifier="public" Margin="0,249,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="InjectorChangelogLine4" x:FieldModifier="public" Margin="0,271,0,0"
             HorizontalAlignment="Center" VerticalAlignment="Top" Content="" FontFamily="Inter" FontSize="10px"
             FontWeight="Regular" Foreground="AliceBlue"/>
      <Label Margin="256,311,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Inter"
             FontSize="7px" FontWeight="Regular" Foreground="AliceBlue"/>
      <Label x:Name="InjectorVersionLabel" Width="73" Margin="0,314,296,0" HorizontalAlignment="Right"
             VerticalAlignment="Top" Content="Injector version: " FontFamily="Inter" FontSize="7px"
             FontWeight="Regular" Foreground="White"/>
      <Border MouseLeftButtonDown="Window_OnMouseLeftButtonDown" Panel.ZIndex="-5" Background="Black"
              BorderBrush="Gray" BorderThickness="1" CornerRadius="20" Opacity="0"/>
    </Grid>
  </Border>
</Window>